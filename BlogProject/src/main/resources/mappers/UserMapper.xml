<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.gblog.dao.UserDAO">
  
  <!-- 회원등록 -->
  <insert id="insertUser">
  	<![CDATA[
  	insert into user(user_id, user_pw, user_name, user_birth, user_email, user_phone, user_gender)
  	values(#{user_id}, #{user_pw}, #{user_name}, #{user_birth}, #{user_email}, #{user_phone}, #{user_gender})
  	]]>
  </insert>
  
<!-- 아이디중복확인 -->
  <select id="idcheck" resultType="int">
  <![CDATA[
  select count(*) from user
  where user_id = #{user_id}  
  
  ]]>
  
  </select>
  
  
  <!-- 이메일 중복 확인 -->
  <select id="login" resultType="com.gblog.dto.UserDTO">
  <![CDATA[
 
  select * from user
  where
  user_id = #{user_id} 
  ]]>
  
  </select>
  
  <!--  select * from user
  where
  user_id = #{user_id} and user_pw = #{user_pw} -->
  
  
  
 
  
   
  
  
  
  
  
  
  
  
  </mapper>