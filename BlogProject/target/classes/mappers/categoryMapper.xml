<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gblog.category.categoryMapper">
	
    <!-- 카테고리 생성 -->
	<insert id="insert">
		insert into category (category_name)
		values (#{category_name})
	</insert>
	
	<!-- 카테고리 삭제 -->
 	<delete id="delete">
		delete from category where category_id = #{category_id}
	</delete> 
	
	<!-- 카테고리 목록 -->
 	<select id="CategoryList" resultType="com.gblog.dto.CategoryDTO">
	 <![CDATA[	
		select category_name, post_count, category_id
		from category
		order by post_count desc
	]]>
	</select>
	
	<!-- 카테고리 수정 -->
	<update id="updateCategory" parameterType="com.gblog.dto.CategoryDTO">
		update category
		set category_name = #{category_name}
		where category_id = #{category_id}
	</update>
	
	<!-- 카테고리 조회 -->
	<select id="selectCategory" resultType="com.gblog.dto.CategoryDTO">
		select category_name, post_id
		from category
		where category_id = #{category_id}
	</select>
</mapper>


